rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /users/{userId}/profile/{fileName} {
      // Users can read their own profile images
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can upload their own profile images
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 && // 5MB limit
        request.resource.contentType.matches('image/.*');
    }

    // Item images
    match /items/{itemId}/{fileName} {
      // Anyone can read item images
      allow read: if true;
      // Only item owners can upload item images
      allow write: if request.auth != null && 
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*');
    }

    // General file uploads (for future use)
    match /uploads/{userId}/{fileName} {
      // Users can read their own uploads
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can upload their own files
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }

    // Public assets (logos, icons, etc.)
    match /public/{fileName} {
      // Anyone can read public assets
      allow read: if true;
      // Only admins can upload public assets (implement admin check)
      allow write: if false;
    }
  }
}


